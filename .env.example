# txttmd environment variables
# Copy this file to .env and fill in your values

# Path to your notes directory
NOTES_PATH=/path/to/your/notes

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# LLM Provider API Keys (add the ones you use)

# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=

# Groq (free tier available)
GROQ_API_KEY=

# OpenRouter
OPENROUTER_API_KEY=

# Perplexity
PERPLEXITY_API_KEY=
